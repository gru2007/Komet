{
  // Добавлять форматирование для .dart файлов не нужно,
  // они форматируются по умолчанию, если используется расширение DartCode.
  // Когда языки указываются как "[json][jsonc][yaml]",
  // автоматическое форматирование не работает, поэтому указываем раздельно.
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}
